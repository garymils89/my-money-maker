    },
    "pool_address": {
      "type": "string",
      "description": "Smart contract address of the pool"
    },
    "token_a": {
      "type": "string",
      "description": "First token symbol"
    },
    "token_b": {
      "type": "string",
      "description": "Second token symbol"
    },
    "token_a_address": {
      "type": "string",
      "description": "Token A contract address"
    },
    "token_b_address": {
      "type": "string",
      "description": "Token B contract address"
    },
    "fee_tier": {
      "type": "number",
      "description": "Pool fee tier (e.g., 0.3 for 0.3%)"
    },
    "current_liquidity": {
