    },
    "buy_exchange": {
      "type": "string",
      "description": "Exchange to buy from"
    },
    "sell_exchange": {
      "type": "string",
      "description": "Exchange to sell to"
    },
    "buy_price": {
      "type": "number",
      "description": "Buy price"
    },
    "sell_price": {
      "type": "number",
      "description": "Sell price"
    },
    "profit_percentage": {
      "type": "number",
      "description": "Profit percentage"
    },
    "volume_available": {
      "type": "number",
      "description": "Available volume"
    },
    "estimated_profit": {
      "type": "number",
